FROM golang:1.13

RUN apt-get install -y curl

COPY packages/gin-basic /go/src

RUN cd /go/src; go get ./...

WORKDIR /go/src

RUN go build main.go

EXPOSE 8080

ENTRYPOINT ["./main"]
